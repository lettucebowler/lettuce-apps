{
  "name": "@lettuce-apps/api-wordlettuce",
  "scripts": {
    "dev": "wrangler dev --remote src/index.ts",
    "ship": "wrangler deploy src/index.ts",
    "lint": "prettier --check . && eslint --ignore-path .gitignore .",
